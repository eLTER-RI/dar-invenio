{# def extra_context #}

{%- extends "invenio_theme/frontpage.html" %}

{# TODO (UI): prepare a proper initial title page !!! #}
{%- if current_user.is_authenticated %}
    {%- block javascript %}
        <link rel="stylesheet" href="https://dataspace.elter-ri.eu/static-data-dev/page.css"/>
        <script type="module" src="https://dataspace.elter-ri.eu/static-data-dev/page.js"></script>
    {%- endblock %}
{%- endif %}

{%- block page_header %}
    {% include "header.html" %}
{%- endblock page_header %}

{%- block page_body %}

    <div class="title-image">
        <img class="full-width" src="{{ url_for('static', filename=config.PHOTO2) }}" alt="photo 1">
    </div>
    {% block main_column %}
        <div class="ui title-search-container backdrop container container-fluid">

            <div class="row rel-mt-5">
                <form action="{{ url_for('lter.search') }}" class="ui form" role="search">
                    <div id="frontpage-search-input" class="ui fluid action input search-input">
                        <input type="text" name="q" class="form-control" placeholder="{{ _('Search') }}">
                        <button type="submit" class="ui icon search button" aria-label="{{ _('Search') }}"><i
                                class="search icon"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="row rel-mt-1">
                <a href="{{ url_for('lter.search') }}"
                   class="right-floated carrotOrange">{{ _('Show all records') }}</a>
            </div>
            <div class="ui grid title-stats">
                <div class="three column item bg-lightBlue">
                    <i class="file outline icon"></i>
                    <div class="info">
                        <div class="number">250 000</div>
                        <div class="description"><b>Files</b></div>
                    </div>
                </div>

                <div class="three column item bg-carrotOrange">
                    <i class="database icon"></i>
                    <div class="info">
                        <div class="number">250 000</div>
                        <div class="description"><b>Datasets</b></div>
                    </div>
                </div>

                <div class="three column item bg-yellowGreen">
                    <i class="user outline icon"></i>
                    <div class="info">
                        <div class="number">1000</div>
                        <div class="description"><b>Sources</b></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="title-communities-container container container-fluid">
            {%- if current_user.is_authenticated %}
                <div id="ingestRoot"></div>
                TEST
            {%- endif %}
        </div>

    {% endblock main_column %}

    {%- block bottom_section %}
    {%- endblock bottom_section %}

{%- endblock page_body %}
