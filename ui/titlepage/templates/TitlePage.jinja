{# def extra_context #}

{%- extends "invenio_theme/frontpage.html" %}

{%- block javascript %}
    {{ super() }}
{%- endblock javascript %}

{%- block page_header %}
    {% include "header.html" %}
{%- endblock page_header %}

{%- block page_body %}
    {% block main_column %}
        <div class="ui container full-height">
            <div class="ui centered aligned">
                <div class="ui item">
                    <img class="title-image" src="{{ url_for('static', filename=config.LOGO) }}" alt="photo 1">

                </div>
                <div class="ui full-width item">
                    <form action="{{ url_for('lter.search') }}"
                          class="ui form full-width title-page-container-element" role="search">
                        <div id="frontpage-search-input" class="ui action input search-input title-page ">
                            <input type="text" name="q" class="form-control" placeholder="{{ _('Search') }}">
                            <button type="submit" class="ui icon search button" aria-label="{{ _('Search') }}"><i
                                    class="search icon"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="ui full-width item">
                    <a href="{{ url_for('lter.search') }}"
                       class="oxfordBlue">{{ _('Show all records') }}</a>
                </div>
            </div>
        </div>

    {% endblock main_column %}

    {%- block bottom_section %}
    {%- endblock bottom_section %}

{%- endblock page_body %}
